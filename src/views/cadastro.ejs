<%- include('includes/nav') %>
<body>
        <div class="bg">
                <div class="login-container main-content">
                        <h1 class="login-title">Cadastro</h1>
                        <h4>Faça seu cadastro para acessar os recursos</h4>
                        <%- include('includes/message'); %>
                        <form action="/login/cadastro/cadastrar" method="POST">
                                <input type="hidden" name="_csrf" value=<%= csrfToken %>>
                                <input class="input" type="text" placeholder="Nome" name="nome" >
                                <input class="input" type="text" placeholder="Sobrenome" name="sobrenome">
                                <input class="input" type="text" placeholder="Email" name="email">
                                <input  class="input" type="password" placeholder="Senha" name="password">
                                 <input  class="input" type="password" placeholder="Confirmação de Senha" name="confirmacao">
                                <button type="submit">Cadastrar</button>
                        </form>
                </div>
                
        </div>
        <%- include('includes/footer') %>